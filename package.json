{
  "name": "collaborative-canvas",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "nodemon --exec tsx server/server.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "esbuild server/production.ts --bundle --platform=node --target=node20 --format=esm --outfile=dist-server/production.js --packages=external",
    "start": "node dist-server/production.js",
    "start:dev": "tsx server/server.ts",
    "preview": "npm run build && npm run start",
    "clean": "rm -rf dist dist-server",
    "docker:build": "docker build -t collaborative-canvas .",
    "docker:run": "docker run -p 3000:3000 collaborative-canvas",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.6",
    "concurrently": "^8.2.2",
    "esbuild": "^0.27.2",
    "nodemon": "^3.0.2",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.4"
  }
}
